<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="basic_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">#044961</item>

    </style>

    <style name="my_button_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint">#91A9AC</item>
        <item name="android:fontFamily">@font/farro</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="my_textView_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/farro_bold</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">15dp</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">#C5C5C5</item>
    </style>

    <style name="my_editText_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">text</item>
        <item name="android:padding">10dp</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">#C5C5C5</item>
        <item name="android:textColorHint">#C5C5C5</item>
    </style>

    <style name="my_switch_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#C5C5C5</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>